<div class="flex flex-row justify-center items-center min-h-screen bg-gray-100">
  <div class="max-w-lg bg-white shadow-md rounded-lg overflow-hidden flex-grow-0">
    <div class="p-4">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Submit Your Breed</h2>
      <%= form_with(url: submit_path, method: :post, local: false, class: "mb-4 mr-4") do |form| %>
        <div class="mb-4">
          <%= form.text_field :breed, placeholder: "Enter your Breed", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
        <%= form.submit "Submit", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      <% end %>
    </div>
  </div>
  <div class="m-8">
    <%= turbo_frame_tag "image" do %>
      <%= render 'image' %>
    <% end %>
  </div>
</div>

<%= turbo_stream_from "form" %>
<%= turbo_stream_from "image" %>
