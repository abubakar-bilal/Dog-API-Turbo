<div class="flex flex-row justify-center">
  <div class="max-w-md mx-auto">
    <%= form_with(url: submit_path, method: :post, local: false, class: "mb-4", data: { turbo_frame: "form" }) do |form| %>
      <%= form.text_field :breed, placeholder: "Enter your Breed", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      <%= form.submit "Submit", class: "mt-4 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  </div>
  <div class="max-w-md mx-auto" id="image-container">
    <%= turbo_frame_tag "image" do %>
      <%= render 'image' %>
    <% end %>
  </div>
</div>

<%= turbo_stream_from "form" %>
<%= turbo_stream_from "image" %>
